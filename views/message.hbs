<div class="table-show">
    <div class="content-wrapper">
        <h1>Send message</h1>
        <h2>Please provide details</h2>
        <form action="" class="message-form">
            <label for="input-title" class="label-title">
                <input type="text" id="input-title" class="input-title" name="title" placeholder="message title">
            </label>
            <label for="input-email" class="label-email">
                <input type="email" id="input-email" class="input-email" name="email" placeholder="recipient email">
            </label>
            <label for="input-password" class="label-password">
                <input type="text" id="input-password" class="input-password" name="password"
                       placeholder="password required in decrypting process ">
            </label>
            <label for="textarea">
                <textarea class="textarea" name="message" id="textarea" placeholder="your message"></textarea>
            </label>

            <button class="btn-register" id="btn-register" type="submit">send</button>
        </form>
        <a href="/" class="main">main</a>
    </div>
</div>